<h1>Listing stakeholders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Is client</th>
      <th>Is supplier</th>
      <th>Description</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stakeholders.each do |stakeholder| %>
      <tr>
        <td><%= stakeholder.name %></td>
        <td><%= stakeholder.is_client %></td>
        <td><%= stakeholder.is_supplier %></td>
        <td><%= stakeholder.description %></td>
        <td><%= stakeholder.status %></td>
        <td><%= link_to 'Show', stakeholder %></td>
        <td><%= link_to 'Edit', edit_stakeholder_path(stakeholder) %></td>
        <td><%= link_to 'Destroy', stakeholder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

